<div class="col-xs-12" ng-controller="tasitKredisiController">

    <div class="col-xs-12 col-sm-12">
        <div class="clearfix">
            <div class="col-md-offset-3 col-md-3">
                <button class="btn btn-success  " type="button"  data-ng-click="ZimmetSozlesmesiOnayla(1)">
                    <i class="ace-icon fa fa-check bigger-110"></i>Kabul Ediyorum
                </button>
            </div>
            <div class="col-md-3">
                <button class="btn btn-danger  " type="button"   data-ng-click="ZimmetSozlesmesiOnayla(2)">
                    <i class="ace-icon fa fa-close bigger-110"></i>Kabul Etmiyorum
                </button>
            </div>
        </div>
      
    </div>
    <br />
    <div class="col-xs-12 col-sm-12 widget-container-col ui-sortable" ng-show="!ErrorShow">
        <div class="widget-box widget-color-dark ui-sortable-handle">
            <div class="widget-header widget-header-small">
                <h6 class="widget-title bigger lighter">
                    Taşıt Kredileri
                </h6>
                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up white"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <div class="alert alert-info" ng-show="tasitKredileri.length === 0">
                        <button type="button" class="close" data-dismiss="alert">
                            <i class="icon-remove"></i>
                        </button>
                        <strong>Kayıt Yok!</strong> Sistem de üzerinize kayıtli demirbaş bulunamadı.
                        <br />
                    </div>
                    <table id="sample-table-1" ng-show="tasitKredileri.length !== 0" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Sıra No
                                </th>
                                <th>
                                    Demirbaş Kodu
                                </th>
                                <th>
                                    Demirbaş Adı
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="tasitKredisi in tasitKredileri">
                                <td>
                                    {{ tasitKredisi.BankaAdi }}
                                </td>
                                <td>
                                    {{ tasitKredisi.VadeOrani }}
                                </td>
                                <td>
                                    {{ tasitKredisi.VadeliTutar }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
